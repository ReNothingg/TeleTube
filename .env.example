# --- Основные Настройки Telegram ---
# Токен вашего Telegram бота (получить у @BotFather)
BOT_TOKEN="ВАШ_ТЕЛЕГРАМ_БОТ_ТОКЕН"

# Ваш Telegram User ID (можно узнать у @userinfobot)
# Это нужно для админских команд
CREATOR_ID="ВАШ_TELEGRAM_ID"

# ID или @username обязательного канала для подписки
# Оставьте пустым, если проверка подписки не нужна
# Для публичного канала: @имя_канала
# Для приватного канала: -100xxxxxxxxxx (ID чата)
CHANNEL_ID="@"


# --- Настройки Имени и Файлов ---
# Имя вашего бота (будет использоваться в сообщениях)
BOT_NAME="TeleTubeSim"

# Название файла базы данных (рекомендуется .json для текущей версии кода)
DATABASE_FILE="database.json"

# Название файла с ключевыми словами
KEYWORDS_FILE="keywords.txt"

# Название файла для временного изображения с лидербордом
LEADERBOARD_IMAGE_FILE="leaderboard_pic.png"


# --- Игровые Механики: Кулдауны и Популярность ---
# Время кулдауна между публикациями видео в часах (можно дробное, например, 0.5 для 30 минут)
COOLDOWN_HOURS="12"

# Порог популярности видео, выше которого дается бонус подписчиков
POPULARITY_THRESHOLD_BONUS="7"

# Бонус к популярности за каждое найденное ключевое слово в названии видео
KEYWORD_BONUS_POINTS="2"

# Минимальный случайный модификатор к популярности видео
POPULARITY_RANDOM_MIN="-10"

# Максимальный случайный модификатор к популярности видео
POPULARITY_RANDOM_MAX="20"

# Минимальное количество бонусных подписчиков при высокой популярности
BONUS_SUBSCRIBERS_MIN="1"

# Максимальное количество бонусных подписчиков при высокой популярности
BONUS_SUBSCRIBERS_MAX="5"

# Порог популярности, ниже которого видео считается сильно негативным
NEGATIVE_POPULARITY_THRESHOLD="-5"


# --- Игровая Валюта и Бонусы ---
# Название внутриигровой валюты
DEFAULT_CURRENCY_NAME="TeleCoin"

# Базовое количество валюты за ежедневный бонус
DAILY_BONUS_AMOUNT="10"

# Множитель для ежедневного бонуса за каждый день непрерывного стрика (например, 1.1 для +10% каждый день)
DAILY_BONUS_STREAK_MULTIPLIER="1.2"


# --- Настройки Магазина ---
# Здесь можно определить товары магазина в формате JSON строки,
# либо оставить их в коде, если структура сложная.
# Для простоты, оставим их пока в коде (shop_items). Если выносить, то это должно быть валидным JSON.
# Пример (НЕ ИСПОЛЬЗУЕТСЯ В ТЕКУЩЕМ КОДЕ, ЕСЛИ ОСТАВЛЯТЬ В PYTHON):
# SHOP_ITEMS_JSON='{"popularity_boost_small": {"name": "Малый Усилитель", "description": "...", "price": 50, "effect": {"type": "event_modifier", "modifier": 5, "target": "next_video_popularity"}}}'


# --- Настройки Достижений ---
# Аналогично магазину, определения достижений можно вынести сюда в JSON,
# но для текущей реализации они остаются в коде (achievements_definition).
# Пример (НЕ ИСПОЛЬЗУЕТСЯ В ТЕКУЩЕМ КОДЕ):
# ACHIEVEMENTS_JSON='{"newbie_blogger": {"name": "Новичок", "condition_videos": 1, "reward_coins": 5}}'

# --- Уровень Логирования ---
# Возможные значения: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"